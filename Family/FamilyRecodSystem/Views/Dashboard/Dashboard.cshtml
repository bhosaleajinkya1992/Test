
@{
    ViewBag.Title = "Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<script src="~/Scripts/jquery-3.4.1.min.js"></script>

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <style>
        .row {
            padding: 5px;
        }

        #Admin {
            border: black;
            border-style: solid;
            border-width: thin;
            height: 460px;
            padding: 25px;
            /*background-color: lightblue;*/
        }
    </style>
</head>
<body>
    <div id="Admin" class="container">
        <div class="panel">
            <div class="panel-body">
                <div id="rowCreateApp"  class="row" style="text-align: center; display: block;"><div class="col-sm-12 col-md-12 col-lg-12"><button class="btn btn-success" onclick="CreateApplication();">Create Application</button></div></div>
                <div  id="rowSearchApp" class="row" style="text-align: center; display:block;"><div class="col-sm-12 col-md-12 col-lg-12"><button class="btn btn-success" onclick="Searchpplication();">Search Application</button></div></div>
            </div>
        </div>
    </div>
</body>
</html>

<script>
    $(document).ready(function () {
        HideButtonsBasedOnRole();
    });

    function HideButtonsBasedOnRole() {
        debugger
        if ('@Session["UserType"].ToString()' == "Applicant") {
            $('#rowSearchApp').css("display", "none");
        }
    }
    function CreateApplication() {
    document.location = '@Url.Action("CreateApplication", "Dashboard")';
    }
    function Searchpplication() {
        document.location = '@Url.Action("SearchApplication", "Dashboard")';
    }
</script>
